<div class="row">
  <div class="col-md-12">
    <p id="notice"><%= notice %></p>

    <h1>Próximas visitas</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Horario</th>
          <th>Guía</th>
          <th>Nombre de Organizador</th>
          <th>Email de Organizador</th>
          <th>Tipo de Visita</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @visits.each do |visit| %>
        <tr>
          <td><%= visit.scheduled %></td>
          <td><%= visit.user %></td>
          <td><%= visit.visitor_name %></td>
          <td><%= visit.visitor_email %></td>
          <td><%= visit.visit_type %></td>
          <td><%= link_to 'Show', visit %></td>
          <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
          <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Visit', new_visit_path %>
  </div>
</div>
